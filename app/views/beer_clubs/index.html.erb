<p id="notice"><%= notice %></p>

<h1>Beer Clubs</h1>

<% if @beer_clubs.empty? %>
  <p>No beer clubs exist.</p>
<% else %>
  <p>Number of beer clubs: <%= @beer_clubs.count %></p>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Founded</th>
        <th>City</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @beer_clubs.each do |beer_club| %>
        <tr>
          <td><%= beer_club.name %></td>
          <td><%= beer_club.founded %></td>
          <td><%= beer_club.city %></td>
          <td><%= link_to 'Show', beer_club %></td>
          <td><%= link_to 'Edit', edit_beer_club_path(beer_club) %></td>
          <td><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>

<%= link_to 'New Beer club', new_beer_club_path %>
