<p id="notice"><%= notice %></p>

<h1>Beer Clubs</h1>

<% if @beer_clubs.empty? %>
  <p>No beer clubs exist.</p>
<% else %>
  <p>Number of beer clubs: <%= @beer_clubs.count %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Founded</th>
        <th>City</th>
      </tr>
    </thead>

    <tbody>
      <% @beer_clubs.each do |beer_club| %>
        <tr>
          <td><%= link_to beer_club.name, beer_club %></td>
          <td><%= beer_club.founded %></td>
          <td><%= beer_club.city %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>

<%= link_to 'New Beer Club', new_beer_club_path, class: "btn btn-primary" if current_user %>
