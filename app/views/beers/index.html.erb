<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<% if @beers.empty? %>
  <p>No beers exist.</p>
<% else %>
  <p>Number of beers: <%= @beers.count %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Style</th>
        <th>Brewery</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name, beer %></td>
          <td><%= beer.style %></td>
          <td><%= link_to beer.brewery.name, beer.brewery %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>

<%= link_to 'New Beer', new_beer_path, class: "btn btn-primary" if current_user %><br>
