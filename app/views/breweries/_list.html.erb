<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order: "name") %></th>
    <% if session[:last_breweries_sort] == 'year_asc' %>
      <th><%= link_to 'Year', breweries_path(order: "year_desc") %></th>
    <% else %>
      <th><%= link_to 'Year', breweries_path(order: "year_asc") %></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
  <% end %>
  </tbody>
</table>
