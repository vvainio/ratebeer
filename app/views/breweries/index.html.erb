<p id="notice"><%= notice %></p>

<h1>Breweries</h1>

<% if @breweries.empty? %>
  <p>No breweries exist.</p>
<% else %>
  <p>Number of breweries: <%= @breweries.count %></p>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Year</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @breweries.each do |brewery| %>
        <tr>
          <td><%= link_to brewery.name, brewery %></td>
          <td><%= brewery.year %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>

<%= link_to 'New Brewery', new_brewery_path if current_user %><br>
