<h2>Join a beer club</h2>

<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @beer_clubs.empty? %>
    <p>No beer clubs exist.</p>
  <% else %>
    <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s, selected: @membership.beer_club_id) %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>

<% end %>