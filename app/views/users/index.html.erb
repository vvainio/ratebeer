<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if @users.empty? %>
  <p>No users exist.</p>
<% else %>
  <p>Number of users: <%= @users.count %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Username</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
